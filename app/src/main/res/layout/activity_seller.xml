<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDonateorSell.SellerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/et_seller_product_image_title"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/image_not_found"
            android:textColorHint="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_seller_image_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/background_btn_bg"
            android:fontFamily="@font/aldrich"
            android:text="upload image of product"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/spinner_select_product_category"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:entries="@array/select_product_category"/>

      <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2sp">

            <EditText
                android:id="@+id/et_seller_product_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:textColorHint="@color/black"
                android:paddingLeft="10sp"
                android:inputType="text"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

      </com.google.android.material.textfield.TextInputLayout>


  <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10sp"
        app:hintTextColor="@color/black"
        app:boxStrokeWidth="2sp">

            <EditText
                android:id="@+id/et_seller_paid_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paid Status"
                android:textColorHint="@color/black"
                android:paddingLeft="10sp"
                android:inputType="text"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

  </com.google.android.material.textfield.TextInputLayout>

   <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="10sp"
           app:boxStrokeColor="@color/blue"
           app:hintTextColor="@color/black"
           app:boxStrokeWidth="2sp">

       <EditText
           android:id="@+id/et_seller_productrating_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/adamina"
           android:hint="Product Rating"
           android:inputType="text"
           android:paddingLeft="10sp"
           android:textColor="@color/black"
           android:textColorHint="@color/black"
           android:textSize="16sp"
           android:textStyle="bold" />

   </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2sp">

        <EditText
            android:id="@+id/et_seller_quantity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:textColorHint="@color/black"
            android:paddingLeft="10sp"
            android:inputType="text"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2sp">

        <EditText
            android:id="@+id/et_seller_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textColorHint="@color/black"
            android:paddingLeft="10sp"
            android:inputType="text"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2sp">

        <EditText
            android:id="@+id/et_seller_pickup_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Location"
            android:textColorHint="@color/black"
            android:paddingLeft="10sp"
            android:inputType="text"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Option"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black"/>

        <Spinner
            android:id="@+id/spinner_pickup_option"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:entries="@array/pickup_option" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2sp">

        <TextView
            android:id="@+id/et_seller_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller"
            android:editable="false"
            android:textColorHint="@color/black"
            android:paddingLeft="10sp"
            android:inputType="text"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sellerAll_Details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/background_btn_bg"
            android:fontFamily="@font/aldrich"
            android:text="Upload Category"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>