<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Main CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginTop="100dp"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#653C3C"
            android:backgroundTint="#F4EEEE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_corner_color"
                android:gravity="center_horizontal">

                <!-- Logo -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/app_logo"
                    android:contentDescription="App Logo"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"/>

                <!-- App Name & Tagline -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kindness Cabinet"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate and Sell for a Sustainable Future"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- About Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/information"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We aim to reduce waste and promote sustainability by helping people donate or sell unwanted items to those who need them."
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>

                <!-- Mission Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/earth"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our mission is to build a circular economy by making donations and reusing easy for everyone."
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>

                <!-- Contact Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/email"
                        android:layout_marginEnd="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:text="📧 Email: support@kindnesscabinet.com"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:autoLink="email"
                            android:linksClickable="true"
                            android:textColor="@color/blue"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌐 Website: https://kindnesscabinet2025.mystrikingly.com/"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:textColor="@color/blue"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>