<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F3E6ED"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_corner_color"
            android:padding="10dp">

            <!-- Role Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/aldrich"
                android:text="Role"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/aldrich"
                android:text="Doner"
                android:textColor="@color/black"
                android:textSize="16sp" />



            <!-- Category Section -->

            <!-- Doner or Seller Name Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/aldrich"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/aldrich"
                android:text="Doner"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Doner or Seller Name Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/aldrich"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/aldrich"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <!-- Category Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/aldrich"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvHistoryCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Books"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/aldrich"
                android:layout_marginBottom="12dp"/>

            <!-- Product Name Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/aldrich"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvHistoryProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educational Books"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/aldrich"
                android:layout_marginBottom="12dp"/>

            <!-- More Details Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAllHistoryViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:padding="15dp"
                android:text="View History"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>