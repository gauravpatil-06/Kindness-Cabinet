<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDonateorSell.DonateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/et_doner_product_image_title"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/image_not_found"
            android:textColorHint="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_doner_image_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/background_btn_bg"
            android:fontFamily="@font/aldrich"
            android:text="upload image of product"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black"/>

        <Spinner
            android:id="@+id/spinner_select_product_category"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10sp"
            android:entries="@array/select_product_category" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/et_doner_product_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Product Name"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/et_doner_paid_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Paid Status"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/et_doner_productrating_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Product Rating"
                android:inputType="text|number"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/et_doner_quantity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Quantity"
                android:inputType="text|numberDecimal"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/et_doner_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Description"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/et_doner_pickup_location_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Pickup Location"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Option"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black"/>

            <Spinner
                android:id="@+id/spinner_pickup_option"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:entries="@array/pickup_option" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxStrokeWidth="2sp"
            app:hintTextColor="@color/black">

            <TextView
                android:id="@+id/et_doner_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:fontFamily="@font/adamina"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:text="Doner"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDonerSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/background_btn_bg"
            android:fontFamily="@font/aldrich"
            android:text="Upload Category"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>