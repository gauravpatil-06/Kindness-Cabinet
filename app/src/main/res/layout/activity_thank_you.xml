<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentGateway.Thank_YouActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_order_place"
        android:src="@drawable/order_place"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_view_order_image"
        android:visibility="visible"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_order_received"
        android:text="Yay! Order Received"
        android:textColor="@color/blue"
        android:textSize="24dp"
        android:textAlignment="center"
        android:padding="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_delivered_shortly"
        android:text="Your Order will be delivered shortly. Keep Ordering"
        android:textColor="@color/extreame_dark_grey"
        android:textAlignment="center"
        android:textSize="14dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_gravity="center"
        android:visibility="gone"/>


</LinearLayout>